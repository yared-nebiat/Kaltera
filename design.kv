WindowManager:
	MainWindow:
	InstructionWindow:
	GameWindow:
	AdvanceWindow:

<Button>:
	id: btn
	font_size: 15
	size_hint: (0.2, 0.1)
	color: (0, 0, 0, 1)
	background_color: (0, 0, 0, 0) if btn.state == "normal" else (0, 0, 0, 0.1)



<MainWindow>:
	name: "main"
	sound: sound
	soundpic: soundpic

	FloatLayout:
		canvas:
			Color:
				rgba: 1, 1, 1, 1
	        Rectangle:
	            pos: 0,0
	            size: self.size
		Image:
			source: 'game.png'
			size_hint: 0.35, 0.35
			pos_hint: {"center_x":0.5, "top":0.95}
			allow_stretch: True
		Image:
			source: 'tilet.png'
			size_hint: 1, 0.35
			pos_hint: {"center_y": 0.99}
			allow_stretch: False
		Image:
			source: 'tilet.png'
			size_hint: 1, 0.35
			pos_hint: {"center_y": 0.025}
			allow_stretch: False
		Button:
			id: playbtn
			pos_hint: {"center_x":0.5, "center_y":0.625}
			size_hint: (0.4, 0.1)
			background_color: (0.17, 0.17, 0.17, 0.3) if playbtn.state == "normal" else (0.255, 0.255, 0.255, 0.1)
			text: "Play"
			on_release:
				app.root.current = "game"
				root.manager.transition.direction = "left"
		Button:
			id: instructions
			pos_hint: {"center_x":0.5, "center_y":0.5}
			size_hint: (0.4, 0.1)
			background_color: (0.17, 0.17, 0.17, 0.3) if instructions.state == "normal" else (0.255, 0.255, 0.255, 0.1)
			text: "Instructions"
			on_release:
				app.root.current = "instructions"
				root.manager.transition.direction = "left"
		Button:
			id: sound
			font_size: 13
			pos_hint: {"center_x":0.1, "center_y":0.125}
			size_hint: (0.23, 0.1)
			on_release: root.audio()
		Image:
			id: soundpic
			source: "volume.png"
			pos_hint: {"center_x":0.1, "center_y":0.125}
			size_hint: (0.23, 0.1)
			allow_stretch: False




